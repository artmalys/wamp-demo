{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "dots",
          "roles": [
            {
              "name": "dots-backend",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            },
            {
              "name": "dots-frontend",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": "$WAMP_DOTS_PORT"
          },
          "paths": {
            "ws": {
              "type": "websocket",
              "serializers": ["json"],
              "auth": {
                "ticket": {
                  "type": "static",
                  "principals": {
                    "dots-backend": {
                      "ticket": "${WAMP_DOTS_BACKEND_SECRET}",
                      "role": "dots-backend"
                    },
                    "dots-frontend": {
                      "ticket": "${WAMP_DOTS_FRONTEND_SECRET}",
                      "role": "dots-frontend"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}
